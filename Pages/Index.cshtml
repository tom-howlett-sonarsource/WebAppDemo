@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <form method="post">
        <table class="table">
            <tr>
                <td>
                    <label for="DrivingLicenceNumber">Driving Licence Number</label>
                </td>
                <td>
                    <input type="text" class="form-control" id="DrivingLicenceNumber" asp-for="DrivingLicenceNumber" required>
                    <span asp-validation-for="DrivingLicenceNumber" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="ExpiryDate">Expiry Date</label>
                </td>
                <td>
                    <input type="date" class="form-control" id="ExpiryDate" asp-for="ExpiryDate" required>
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </td>
            </tr>
        </table>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>